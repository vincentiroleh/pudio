<% if(success_msg && success_msg != '') { %>
    <div class="alert text-success"><%= success_msg %></div>
<% } else if(error_msg && error_msg != '') { %>
    <div class="alert text-danger"><%= error_msg %></div>
<% } %>

<% if(error && error != '') { %>
    <div class="alert text-danger"><%= error %></div>
<% } %>